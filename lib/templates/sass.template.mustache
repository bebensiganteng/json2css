// Non-Retina
{{#items}}

{{class}}
  background-image: url({{{escaped_image}}})
  background-position: {{px.offset_x}} {{px.offset_y}}
  background-repeat: no-repeat
  -webkit-background-size: {{px.total_width}} {{px.total_height}}
  -moz-background-size: {{px.total_width}} {{px.total_height}}
  -o-background-size: {{px.total_width}} {{px.total_height}}
  background-size: {{px.total_width}} {{px.total_height}}
  width: {{px.width}}
  height: {{px.height}}
{{/items}}

// Starts from 1.5 to support android
@media (min--moz-device-pixel-ratio: 1.5),(-o-min-device-pixel-ratio: 1.5/1),(-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  {{#itemsRetina}}

  {{class}}
    background-image: url({{{escaped_image}}})
    background-position: {{px.o_x_half}} {{px.o_y_half}}
    background-repeat: no-repeat
    -webkit-background-size: {{px.t_w_half}} {{px.t_h_half}}
    -moz-background-size: {{px.t_w_half}} {{px.t_h_half}}
    -o-background-size: {{px.t_w_half}} {{px.t_h_half}}
    background-size: {{px.t_w_half}} {{px.t_h_half}}
    width: {{px.w_half}}
    height: {{px.h_half}}
  {{/itemsRetina}}
